@page
@model EditReminderModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Reminder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reminder.Id" />
            <div class="form-group">
                <label asp-for="Reminder.ToDoItemId" class="control-label"></label>
                <select asp-for="Reminder.ToDoItemId" class="form-control" asp-items="ViewBag.ToDoItemId"></select>
                <span asp-validation-for="Reminder.ToDoItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.ReminderDate" class="control-label"></label>
                <input asp-for="Reminder.ReminderDate" class="form-control" />
                <span asp-validation-for="Reminder.ReminderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Reminder">Back to reminders</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
